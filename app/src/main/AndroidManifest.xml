<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="apps.kata.spideymessenger">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".mensajeria.UltimosMensajesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".registro_login.RegistroActivity"/>
        <activity android:name=".registro_login.LoginActivity"/>
        <activity android:name=".mensajeria.NuevoMensajeActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".mensajeria.UltimosMensajesActivity" />
        </activity>
        <activity android:name=".mensajeria.RegistroChatActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".mensajeria.UltimosMensajesActivity"/>
        </activity>
    </application>

</manifest>