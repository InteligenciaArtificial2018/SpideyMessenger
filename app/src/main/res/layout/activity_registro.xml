<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroActivity" android:background="@color/inicioLogin">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreUsuario_registro"
            android:background="@drawable/estilo_cajas_de_texto"
            android:hint="Nombre de usuario"
            android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:autofillHints=""
            android:paddingStart="25dp"
            android:drawableLeft="@drawable/ic_nombreusuario"
            android:paddingLeft="25dp"

            android:drawablePadding="10dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnFoto_registro"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword_registro"
            android:hint="ContraseÃ±a"
            android:background="@drawable/estilo_cajas_de_texto"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo_registro"
            app:layout_constraintEnd_toEndOf="@+id/txtCorreo_registro"
            android:paddingLeft="25dp"
            app:layout_constraintStart_toStartOf="@+id/txtCorreo_registro"
            android:paddingStart="25dp"
            android:autofillHints=""
            tools:targetApi="o"
            android:drawableLeft="@drawable/ic_passwordusuario"
            android:layout_below="@+id/txtNombreUsuario_registro"
            android:nextFocusForward="@+id/txtNombreUsuario_registro"
            android:drawablePadding="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtCorreo_registro"
            android:hint="Correo "
            android:background="@drawable/estilo_cajas_de_texto"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuario_registro"
            app:layout_constraintStart_toStartOf="@+id/txtNombreUsuario_registro"
            android:paddingLeft="25dp"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreUsuario_registro"
            android:layout_below="@+id/txtPassword_registro"
            android:nextFocusForward="@+id/txtPassword_registro"
            android:drawableLeft="@drawable/ic_correousuario" android:drawablePadding="10dp"/>
    <Button
            android:text="Registrarse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRegistro_registro" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword_registro"
            app:layout_constraintEnd_toEndOf="@+id/txtPassword_registro"
            android:layout_below="@+id/txtCorreo_registro"
            android:nextFocusForward="@+id/txtCorreo_registro"
            app:layout_constraintStart_toStartOf="@+id/txtPassword_registro"
            android:background="@drawable/estilo_botones"
            android:textStyle="bold" android:textColor="@android:color/white"/>
    <TextView
            android:text="Ya tengo una cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTieneCuenta_registro" android:textColor="@android:color/white"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btnRegistro_registro"
            app:layout_constraintEnd_toEndOf="@+id/btnRegistro_registro"
            app:layout_constraintStart_toStartOf="@+id/btnRegistro_registro" android:textSize="18sp"
            android:textStyle="bold"/>
    <Button
            android:text="Agregar foto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnFoto_registro"
            android:textStyle="bold" android:textColor="@android:color/white"
            android:background="@drawable/estilo_foto_perfil"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:layout_constraintTop_toTopOf="@+id/btnFoto_registro"
            app:layout_constraintBottom_toBottomOf="@+id/btnFoto_registro"
            app:layout_constraintEnd_toEndOf="@+id/btnFoto_registro"
            app:layout_constraintStart_toStartOf="@+id/btnFoto_registro" android:id="@+id/imgAgregarFoto_registro"/>
</android.support.constraint.ConstraintLayout>