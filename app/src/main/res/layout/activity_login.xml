<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/inicioLogin">

    <TextView
            android:text="Volver al registro"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/lblVolverRegistro_Login"
            android:textColor="@android:color/white"
            android:textStyle="bold" android:textSize="18sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnIniciar_login"
            app:layout_constraintEnd_toEndOf="@+id/btnIniciar_login"
            app:layout_constraintStart_toStartOf="@+id/btnIniciar_login"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:background="@android:color/white" android:hint="Nombre de Usuario" android:paddingLeft="25dp"
            android:drawableLeft="@drawable/ic_nombreusuario" android:drawablePadding="25dp "/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword_login" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintEnd_toEndOf="@+id/editText" app:layout_constraintStart_toStartOf="@+id/editText"
            android:background="@android:color/white" android:hint="ContraseÃ±a" android:paddingLeft="25dp"
            android:drawableLeft="@drawable/ic_passwordusuario" android:drawablePadding="25dp"/>
    <Button
            android:text="Iniciar Sesion"
            android:layout_width="318dp"
            android:layout_height="0dp"
            android:id="@+id/btnIniciar_login" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword_login"
            app:layout_constraintEnd_toEndOf="@+id/txtPassword_login"
            app:layout_constraintStart_toStartOf="@+id/txtPassword_login"/>
</android.support.constraint.ConstraintLayout>