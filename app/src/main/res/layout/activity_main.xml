<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/inicioLogin">

    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtNombreUsuario_registro" android:background="@android:color/white"
            android:hint="@string/nombre_de_usuario" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:autofillHints="" android:paddingStart="25dp"
            android:drawableLeft="@drawable/ic_close_envelope" android:paddingLeft="25dp"
            android:drawablePadding="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtPassword_registro"
            android:hint="ContraseÃ±a" android:background="@android:color/white" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo_registro"
            app:layout_constraintEnd_toEndOf="@+id/txtCorreo_registro"
            android:paddingLeft="25dp"
            app:layout_constraintStart_toStartOf="@+id/txtCorreo_registro" android:paddingStart="25dp"
            android:autofillHints="" tools:targetApi="o"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtCorreo_registro"
            android:hint="Correo " android:background="@android:color/white" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombreUsuario_registro"
            app:layout_constraintStart_toStartOf="@+id/txtNombreUsuario_registro"
            android:paddingLeft="25dp"
            app:layout_constraintEnd_toEndOf="@+id/txtNombreUsuario_registro"
    />
    <Button
            android:text="Registrarse"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/btnRegistro_login" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassword_registro"
            app:layout_constraintEnd_toEndOf="@+id/txtPassword_registro"
            app:layout_constraintStart_toStartOf="@+id/txtPassword_registro"/>
    <TextView
            android:text="Ya tengo una cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblTieneCuenta_registro" android:textColor="@android:color/white"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/btnRegistro_login"
            app:layout_constraintEnd_toEndOf="@+id/btnRegistro_login"
            app:layout_constraintStart_toStartOf="@+id/btnRegistro_login" android:textSize="18sp"
            android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>