<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <TextView
            android:id="@+id/tvDeMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Este es mi mensaje que se ajustará en varias líneas y continuará"
            android:maxWidth="240dp"
            android:background="@drawable/estilo_cajas_de_texto"
            android:padding="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgDeMensaje"
            app:layout_constraintTop_toTopOf="@+id/imgDeMensaje"/>

    <ImageView
            android:id="@+id/imgDeMensaje"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/spideymessengerico"/>

</android.support.constraint.ConstraintLayout>